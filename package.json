{
  "type": "module",
  "scripts": {
    "build": "swc ./src --ignore **/*.spec.ts --out-dir ./build --strip-leading-paths",
    "build:watch": "pnpm build --watch",
    "dev": "dotenv -e .env -- concurrently --raw -n API,BUILD,TYPESCRIPT \"pnpm start:watch\" \"pnpm build:watch --source-maps\" \"tsc --noEmit --watch\"",
    "format": "prettier --write \"./src/**/*.{ts,js,json}\"",
    "start": "node -r source-map-support/register ./build/main.js",
    "start:watch": "chokidar --silent \"./build/**/*.js\" \".env\" -c \"kill-port 8080 && pnpm start\"",
    "test": "pnpm test:unit --run && pnpm test:integration",
    "test:unit": "vitest",
    "test:integration": "vitest run -c vitest.config.integration.ts"
  },
  "devDependencies": {
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.11.31",
    "@testcontainers/postgresql": "^11.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.15.29",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.2",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.2",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.1",
    "kill-port": "^2.0.1",
    "prettier": "3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "supertest": "^7.1.1",
    "testcontainers": "^11.0.0",
    "typescript": "^5.8.3",
    "unplugin-swc": "^1.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.2"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.2",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.2",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/platform-express": "^11.1.2",
    "@nestjs/throttler": "^6.4.0",
    "@thallesp/nestjs-better-auth": "^1.0.3",
    "bcrypt": "^6.0.0",
    "better-auth": "^1.3.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "drizzle-orm": "^0.44.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.6.1",
    "nestjs-cls": "^6.0.1",
    "pg": "^8.16.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "source-map-support": "^0.5.21",
    "zod": "^3.25.51"
  },
  "packageManager": "pnpm@10.12.1"
}
