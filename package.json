{
  "type": "module",
  "scripts": {
    "build": "swc ./src --ignore **/*.spec.ts --out-dir ./build --strip-leading-paths",
    "build:watch": "pnpm build --watch",
    "dev": "dotenv -e .env -- concurrently --raw -n API,BUILD,TYPESCRIPT \"pnpm start:watch\" \"pnpm build:watch --source-maps\" \"tsc --noEmit --watch\"",
    "format": "biome format --write ./src",
    "start": "node -r source-map-support/register ./build/main.js",
    "start:watch": "chokidar --silent \"./build/**/*.js\" \".env\" -c \"kill-port 8080 && pnpm start\"",
    "test": "pnpm test:unit --run && pnpm test:integration",
    "test:unit": "vitest",
    "test:integration": "vitest run -c vitest.config.integration.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.4",
    "@testcontainers/postgresql": "^11.10.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/luxon": "^3.7.1",
    "@types/node": "^25.0.2",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.15",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.8",
    "kill-port": "^2.0.1",
    "supertest": "^7.1.4",
    "testcontainers": "^11.10.0",
    "typescript": "^5.9.3",
    "unplugin-swc": "^1.5.9",
    "vite-tsconfig-paths": "^6.0.1",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/throttler": "^6.5.0",
    "@thallesp/nestjs-better-auth": "^2.2.0",
    "bcrypt": "^6.0.0",
    "better-auth": "^1.4.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cookie-parser": "^1.4.7",
    "drizzle-orm": "^0.45.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "luxon": "^3.7.2",
    "nestjs-cls": "^6.1.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "source-map-support": "^0.5.21",
    "zod": "^4.2.0"
  },
  "packageManager": "pnpm@10.25.0"
}
